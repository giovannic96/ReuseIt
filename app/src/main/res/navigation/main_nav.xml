<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/profile_nav"
    app:startDestination="@id/nav_showProfile">

    <fragment
        android:id="@+id/nav_showProfile"
        android:name="it.polito.mad.mhackeroni.ShowProfileFragment"
        android:label="ShowProfileFragment">
        <action
            android:id="@+id/action_nav_showProfile_to_nav_editProfile"
            app:destination="@id/nav_editProfile" />
        <action
            android:id="@+id/action_nav_showProfile_to_showProfileImageFragment"
            app:destination="@id/nav_showImage"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit" />
    </fragment>
    <fragment
        android:id="@+id/nav_editProfile"
        android:name="it.polito.mad.mhackeroni.EditProfileFragment"
        android:label="EditProfileFragment" >
        <action
            android:id="@+id/action_nav_editProfile_to_nav_showProfile"
            app:destination="@id/nav_showProfile"
            app:popUpToInclusive="true"
            app:popUpTo="@id/nav_showProfile" />
    </fragment>

    <fragment
        android:id="@+id/nav_ItemDetail"
        android:name="it.polito.mad.mhackeroni.ItemDetailsFragment"
        android:label="ItemDetailsFragment" >
        <action
            android:id="@+id/action_nav_ItemDetail_to_nav_ItemDetailEdit"
            app:destination="@id/nav_ItemDetailEdit" />
    </fragment>
    <fragment
        android:id="@+id/nav_ItemDetailEdit"
        android:name="it.polito.mad.mhackeroni.ItemEditFragment"
        android:label="ItemEditFragment" >
        <action
            android:id="@+id/action_nav_ItemDetailEdit_to_nav_ItemDetail"
            app:destination="@id/nav_ItemDetail" />
    </fragment>
    <fragment
        android:id="@+id/nav_itemList"
        android:name="it.polito.mad.mhackeroni.ItemListFragment"
        android:label="ItemListFragment" >
        <action
            android:id="@+id/action_nav_itemList_to_nav_ItemDetail"
            app:destination="@id/nav_ItemDetail" />
        <action
            android:id="@+id/action_nav_itemList_to_nav_ItemDetailEdit"
            app:destination="@id/nav_ItemDetailEdit" />
    </fragment>
    <fragment
        android:id="@+id/nav_showImage"
        android:name="it.polito.mad.mhackeroni.ShowProfileImageFragment"
        android:label="ShowProfileImageFragment" >
        <action
            android:id="@+id/action_showProfileImageFragment_to_nav_showProfile"
            app:destination="@id/nav_showProfile"
            app:popUpTo="@id/nav_showProfile"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>